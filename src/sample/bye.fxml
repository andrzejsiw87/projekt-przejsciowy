<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ByeController">
    <bottom>
        <ButtonBar BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="cancelButton" onAction="#backPressed" text="Nie, wróć" />
                <Button fx:id="closeButton" onAction="#closePressed" text="Tak, wyjdź" />
            </buttons>
        </ButtonBar>
    </bottom>
    <center>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="goodbyeText" alignment="CENTER" prefHeight="200.0" prefWidth="350.0" text="Na pewno chcesz wyjść?">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Label>
            </children>
        </HBox>
    </center>
</BorderPane>
